---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";

interface Props extends HTMLAttributes<"a">, VariantProps<typeof link> {
  children: any;
}

export type MainNavLinkProps = VariantProps<typeof link>;

const { hierarchyLevel = "primary", ...attrs } = Astro.props;

export const hierarchyLevelSchema = {
  primary: ["text-xl", "font-serif", "font-semibold"],
  secondary: [],
  tertiary: ["font-serif"],
  quaternary: [],
};

const link = cva(["hover:underline"], {
  variants: {
    hierarchyLevel: hierarchyLevelSchema,
  },
});
---

<a class={link({ hierarchyLevel })} {...attrs}>
  <slot />
</a>
