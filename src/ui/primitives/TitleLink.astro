---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  label: string;
}

const { label, ...attrs } = Astro.props;
---

<a {...attrs}>
  <h3
    class:list={[
      "underline underline-offset-2",
      "text-sky-800 decoration-sky-800/30 hover:decoration-sky-900",
      "transition-decoration duration-300",
      "text-xl font-medium font-serif",
      "text-sky-800",
    ]}
  >
    {label}
  </h3>
</a>
