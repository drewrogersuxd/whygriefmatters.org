---
import type { HTMLTag, Polymorphic } from "astro/types";

type ContainerHTMLTags = "div";

type AdditionalProps = {
  id: string;
};

type Props<Tag extends ContainerHTMLTags> = Polymorphic<{ as: Tag }> &
  AdditionalProps;

const { as: Tag = "div", id, ...attrs } = Astro.props;
---

<Tag
  id={`${id}--carousel-item`}
  class:list={[
    "carousel-item",
    "snap-start lg:snap-none",
    "shrink-0 w-full",
    "sm:w-1/2 lg:w-1/3",
  ]}
  {...attrs}
>
  <slot />
</Tag>
