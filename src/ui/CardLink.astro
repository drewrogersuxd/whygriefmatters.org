---
import type { ComponentProps, HTMLAttributes } from "astro/types";

import { wgmDesignSystem as ds } from "@common/design-system";

import Card from "./primitives/Card.astro";

interface Props extends HTMLAttributes<"a"> {
  external?: boolean;
  cardProps?: ComponentProps<typeof Card>;
}

const { external, cardProps, ...attrs } = Astro.props;

const externalLinkAttrs = external
  ? {
      rel: "noopener",
      target: "_blank",
    }
  : {};
---

<a
  class:list={[
    "font-serif italic",
    "font-serif italic",
    ds.typography.color?.primary.default,
  ]}
  {...attrs}
  {...externalLinkAttrs}
>
  <Card hoverable {...cardProps}>
    <div class="p-2">
      <slot />
    </div>
  </Card>
</a>
