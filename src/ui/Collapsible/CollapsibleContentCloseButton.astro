---
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = {
  classList?: Array<string>;
} & Polymorphic<{ as: Tag }>;

const { as: Tag = "button", classList = [], ...attrs } = Astro.props;
---

<Tag class:list={["collapsible-content-close-button"]} {...attrs}>
  <slot />
</Tag>
