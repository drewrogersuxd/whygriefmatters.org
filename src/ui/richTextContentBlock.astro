---
import { defaultComponents, toHTML } from "@portabletext/to-html";
import type { PortableText } from "@model/common";

interface Props {
  portableText: PortableText;
}

const { portableText } = Astro.props;

const htmlString = toHTML(portableText);

// const modifiedHtml = htmlString.replace(/<p>/g, '<p class="mb-3">');
